{
    "elements":
    [
	{ "type": "Label", "label": "Dateien und Verzeichnisse" },
	{ "type": "ValidationTextBox", "name": "channelListFileName",	"caption": "Name der CSV Datei mit der Kanalliste" },
	{ "type": "CheckBox", "name": "useBouquet",			"caption": "Datei ist ein Bouquet" },
	{ "type": "ValidationTextBox", "name": "pathToCSV",	"caption": "Path zur Kanalliste.csv" },
	{ "type": "ValidationTextBox", "name": "pathToImages",	"caption": "Image-Verzeichnis für die Senderlogos" },


	{ "type": "Label", "label": "EIN/AUS schalten" },
	{ "type": "SelectObject", "name": "harmonyHubObjectID",	"caption": "Harmony Hub - Splitter Instanz (Object - grünes Icon auswählen)" },
	{ "type": "ValidationTextBox", "name": "harmonyHubStartActivityOn",	"caption": "Einschalten - startActivity ON ID" },
	{ "type": "ValidationTextBox", "name": "harmonyHubStartActivityOff",	"caption": "Ausschalten - startActivity OFF ID" },


	{ "type": "Label", "label": "Kanalwechsel" },
	{ "type": "SelectObject", "name": "channelDeviceObjectID",	"caption": "Gerät zum Kanalwechsel (Object - grünes Icon auswählen)" },
	{ "type": "ValidationTextBox", "name": "channelDown",		"caption": "Code: Kanal RUNTER Taste" },
	{ "type": "ValidationTextBox", "name": "channelUp",		"caption": "Code: Kanal HOCH Taste" },
	{ "type": "CheckBox", "name": "sendSingleDigits",		"caption": "Tastencode einzeln schicken (empfohlen)" },
	{ "type": "CheckBox", "name": "sendENTERkey",			"caption": "ENTER bzw SELECT Taste drücken um den Wechsel zu beschleunigen" },
	{ "type": "ValidationTextBox", "name": "sendENTERkeyCode",	"caption": "Code: SELECT bzw ENTER oder OK Taste" },


	{ "type": "Label", "label": "Navigations/Pfeiltasten" },
	{ "type": "ValidationTextBox", "name": "directionDown",		"caption": "Code: Nach UNTEN Taste" },
	{ "type": "ValidationTextBox", "name": "directionLeft",		"caption": "Code: Nach LINKS Taste" },
	{ "type": "ValidationTextBox", "name": "directionRight",	"caption": "Code: Nach RECHTS Taste" },
	{ "type": "ValidationTextBox", "name": "directionUp",		"caption": "Code: Nach OBEN Taste" },
	{ "type": "ValidationTextBox", "name": "okButton",		"caption": "Code: OK Taste (die in der Mitte vom Steuerkreuz)" },
	{ "type": "ValidationTextBox", "name": "backButton",		"caption": "Code: ZURÜCK Taste" },


	{ "type": "Label", "label": "Farbige Tasten" },
	{ "type": "ValidationTextBox", "name": "colorButtonBlue",	"caption": "Code: Blaue Taste" },
	{ "type": "ValidationTextBox", "name": "colorButtonYellow",	"caption": "Code: Gelbe Taste" },
	{ "type": "ValidationTextBox", "name": "colorButtonGreen",	"caption": "Code: Grüne Taste" },
	{ "type": "ValidationTextBox", "name": "colorButtonRed",	"caption": "Code: Rote Taste" },


	{ "type": "Label", "label": "Lautstärkeregelung" },
	{ "type": "SelectObject", "name": "volumeDeviceObjectID",	"caption": "Gerät zur Lautstärkeregelung (Object - grünes Icon auswählen)" },
	{ "type": "ValidationTextBox", "name": "volumeDown",		"caption": "Code: Leiser Taste" },
	{ "type": "ValidationTextBox", "name": "volumeUp",		"caption": "Code: Lauter Taste" },
	{ "type": "ValidationTextBox", "name": "volumeMute",		"caption": "Code: Lautlos Taste" },



	{
		"type": "ExpansionPanel",
		"caption": "Design (klicken zum öffnen)",
		"items": [
			{ "type": "Label", "label": "Design vom Buttonhintergrund" },
			{ "type": "Select", "name": "designButtonPerRow", "caption": "Anzahl an Buttons pro Zeile",
			    "options": [
				{ "caption": "1 Button", "value": 1 },
				{ "caption": "2 Buttons", "value": 2 },
				{ "caption": "3 Buttons", "value": 3 },
				{ "caption": "4 Buttons", "value": 4 },
				{ "caption": "5 Buttons", "value": 5 },
				{ "caption": "6 Buttons", "value": 6 },
				{ "caption": "7 Buttons", "value": 7 },
				{ "caption": "8 Buttons", "value": 8 },
				{ "caption": "9 Buttons", "value": 9 },
				{ "caption": "10 Buttons", "value": 10 }
			    ]
			};
			{ "type": "SelectColor",	"name": "designButtonBackGroundColor",	"caption": "Farbe vom Buttonhintergrund" },
			{ "type": "SelectColor",	"name": "designButtonBackGroundColorH",	"caption": "Farbe vom Buttonhintergrund bei MouseOver" },
			{ "type": "NumberSpinner",	"name": "designButtonWidth",		"caption": "Breite vom Buttonhintergrund",			"suffix": "px"},
			{ "type": "NumberSpinner",	"name": "designButtonHeight",		"caption": "Höhe vom Buttonhintergrund",			"suffix": "px"},
			{ "type": "NumberSpinner",	"name": "designButtonEdge",		"caption": "Radius der Ecken",					"suffix": "px"},
			{ "type": "NumberSpinner",	"name": "designButtonMarginTop",	"caption": "Abstand nach Oben zu anderen Buttons / Rand",	"suffix": "px"},
			{ "type": "NumberSpinner",	"name": "designButtonMarginLeft",	"caption": "Abstand nach Links zu anderen Buttons / Rand",	"suffix": "px"}
		]
	}




    ],
    "actions":
    [
	  { "type": "Button", "label": "HTML Code generieren", "onClick": "WAFFI_generateHTMLcontent($id);" }
    ]
}
